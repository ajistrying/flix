<header>
  <nav>
    <%= link_to image_tag("logo.png"), root_path%>
    <ul class="left">
      <li>
        <%= link_to "Released", movies_path%>
      </li>
      <li>
        <%= link_to "Recent Movies", filter_movies_path(:recent)%>
      </li>
      <li>
        <%= link_to "Upcoming Movies", filter_movies_path(:upcoming)%>
      </li>
      <li>
        <%= link_to "Hit Movies", filter_movies_path(:hits)%>
      </li>
      <li>
        <%= link_to "Flop Movies", filter_movies_path(:flops)%>
      </li>
    </ul>
    <ul class="right">
      <% if current_user %>
        <li>
          <%= link_to current_user.name, current_user %>
        </li>
        <li>
          <%= link_to "Account Settings", edit_user_path(current_user), class: "button"%>
        </li>
        <li>
          <%= link_to "Sign Out", session_path, method: :delete, class: "button "%>
        </li>
      <% else %>
        <li>
          <%= link_to "Sign In", signin_path, class: "button" %>
        </li>
        <li>
          <%= link_to "Sign Up", signup_path, class: "button" %>
        </li>
      <% end %>
    </ul>
  </nav>
</header>